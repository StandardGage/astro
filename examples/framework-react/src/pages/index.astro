---
// Component Imports
import Counter from '../components/Counter';
import Carousel from '../components/Carousel';
import { Image } from 'astro:assets';
const someProps = {
	count: 0,
};

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
			body {
				padding: 2rem;
			}
		</style>
	</head>
	<body>
		<main>
			
			
				<Carousel client:load>
					<input placeholder="test 1">
					<input placeholder="test 2">
					<input placeholder="test 3">
				</Carousel>
				<Carousel client:load>
					<Image src="https://placekitten.com/200/200" width={200} height={200} alt="kitten"></Image>
					<Image src="https://placekitten.com/200/300" width={200} height={200} alt="kitten"></Image>
					<Image src="https://placekitten.com/200/400" width={200} height={200} alt="kitten"></Image>
				</Carousel>
				<Counter count={someProps.count} client:load />
			
			
		</main>
	</body>
</html>
